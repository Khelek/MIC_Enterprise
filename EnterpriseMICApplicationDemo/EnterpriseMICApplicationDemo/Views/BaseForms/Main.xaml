<Window x:Class="EnterpriseMICApplicationDemo.Views.BaseForms.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Name="BasisForm"
        Title="BasisMainFOrm"
        Height="470" Width="1000"><!--"680">-->
    <Window.Resources>
        <Storyboard x:Key="storyboardMore">
            <DoubleAnimation Storyboard.TargetName="BasisForm"
                                                 Storyboard.TargetProperty="Width"
                                                 To="1000" Duration="0:0:0:1">
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="storyboardLess">
            <DoubleAnimation Storyboard.TargetName="BasisForm"
                                                 Storyboard.TargetProperty="Width"
                                                 To="730" Duration="0:0:0:1">
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>
