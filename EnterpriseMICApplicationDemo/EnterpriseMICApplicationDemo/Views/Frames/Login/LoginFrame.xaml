<Page x:Class="EnterpriseMICApplicationDemo.Views.Frames.Login.LoginFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:sys="clr-namespace:System;assembly=mscorlib" 
      mc:Ignorable="d"
	Title="Login" Height="148.409" Width="220.495">

    <StackPanel Margin="5">
        <Label>Ваш логин</Label>
        <TextBox HorizontalAlignment="Left" Height="23" Text="Логин" VerticalAlignment="Top" Width="200"/>
        <WrapPanel>
            <Label>Пароль</Label>
            <Label MouseUp="Label_MouseUp_1">
                Забыли пароль?
                
            </Label>
        </WrapPanel>
        <TextBox HorizontalAlignment="Left" Height="23" Text="Пароль" VerticalAlignment="Top" Width="200"/>
        <WrapPanel Margin="8">
            <CheckBox>Запомнить</CheckBox>
            <Button Width="80" Margin="20,0,0,0" Click="Button_OnLogin">
                Войти
            </Button>
        </WrapPanel>
    </StackPanel>
</Page>
